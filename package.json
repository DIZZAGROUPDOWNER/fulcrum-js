{
  "name": "fulcrum-app",
  "version": "0.4.0",
  "description": "JavaScript wrapper for the Fulcrum API",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/JasonSanford/fulcrum-node.git"
  },
  "scripts": {
    "test": "mocha -R spec",
    "watch": "coffee -w -c -b --no-header -o lib src",
    "build": "npm run build-node && npm run build-browser",
    "build-node": "coffee -c -b --no-header -o lib src",
    "build-browser": "browserify lib/index.js -s Fulcrum > fulcrum.js"
  },
  "keywords": [
    "Fulcrum"
  ],
  "browser": {
    "request": "xhr"
  },
  "author": "Jason Sanford",
  "license": "MIT",
  "devDependencies": {
    "mocha": "~1.20.1",
    "nock": "~0.42.1"
  },
  "dependencies": {
    "request": "~2.37.0",
    "async": "~0.9.0",
    "xhr": "1.13.0"
  }
}
